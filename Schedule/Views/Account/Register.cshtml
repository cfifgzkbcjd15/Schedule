@model Schedule.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Регистрация";
}
<style>
    input[type='file'] {
        color: transparent;
    }
</style>
<h2>Регистрация нового пользователя</h2>

<form method="post" asp-controller="Account" asp-action="Register">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="EducationalInstitutions"></label><br />
        <input asp-for="EducationalInstitutions" />
        <span asp-validation-for="EducationalInstitutions"></span>
    </div>
    <div>
        <label asp-for="Faculty"></label><br />
        <input asp-for="Faculty" />
        <span asp-validation-for="Faculty"></span>
    </div>
    <br />
    <div>
        <label asp-for="FIO"></label><br />
        <input asp-for="FIO" />
        <span asp-validation-for="FIO"></span>
    </div>
    <br />
    <div>
        <label asp-for="Email"></label><br />
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <br />
    <div>
        <label asp-for="Password"></label><br />
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <br />
    <div>
        <label asp-for="PasswordConfirm"></label><br />
        <input asp-for="PasswordConfirm" />
        <span asp-validation-for="PasswordConfirm"></span>
    </div>
    <div>
        <input type="submit" value="Регистрация" />
    </div>
</form>
